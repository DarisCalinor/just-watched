<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= data.Poster %>" alt="movie-poster">
            </div>
            <div class="col-md-4">
                <h4>Diary Movie Edit</h4>
                <h2>
                    <%= data.Title %>
                </h2>
                <p>
                    <%= data.Year %>
                </p>
                <form action="/users/<%= currentUser.username %>/diary/<%= diaryEntryID %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="date">I've watched this on...</label>
                        <input type="date" name="date" id="date" required>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="isRewatched" id="isRewatched"> I've watched this movie before.
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="Update Dairy">
                        </div>
                </form>
                </div>
            </div>

            <% include ../partials/footer %>