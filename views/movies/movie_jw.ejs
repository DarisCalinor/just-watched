<% include ../partials/header %>

<div class="container">
    <div class=row>
    </div>
    <div class="row">
        <div class="col-md-4" >
            <img src="<%= data["Poster"] %>" alt="movie-poster">
        </div>
        <div class="col-md-8 text-justify" >
