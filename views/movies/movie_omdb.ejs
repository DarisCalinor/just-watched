<% include ../partials/header %>

<div class="container">
    <div class=row>
    </div>
    <div class="row">
        <div class="col-md-4" >
            <img src="<%= data["Poster"] %>" alt="movie-poster">
        </div>
        <div class="col-md-8 text-justify" >
            <h3><%= data["Title"] %></h3>
            <h5><%= data["Released"] %> - directed by <%= data["Director"] %></h5>
            <h6><% data["Ratings"].forEach(function(val) { %>
                <%= val.Source %>: <%= val.Value %> | 
                <% }); %>
            </h6>
            <h6>Runtime: <%= data["Runtime"] %></h6>
            <p><%= data["Plot"] %></p>
        </div>
        <div class="col-md-4" >

            <% if(currentUser !== undefined) { %>
            <form class="form-inline" action="/users/<%= currentUser.username %>/diary/new" method="GET">
                <div class="form-group">
                    <input type="hidden" name="imdbID" value="<%= data["imdbID"] %>">
                    <input type="hidden" name="movieId" value="<%= movie["_id"] %>">
                    <input class="btn btn-primary" type="submit" value="Add to Diary">
                </div>
            </form>
            <br>
            <form class="form-inline" action="/<%= currentUser.username %>/watchlist">
                <div class="form-group">
                    <input type="hidden" name="imdbID" value="<%= data["imdbID"] %>">
                    <input type="hidden" name="movieId" value="<%= movie["_id"] %>">
                    <input class="btn btn-primary" type="submit" value="Add to Watchlist">
                </div>
            </form>
            <% } %>
            <br>
            <a class="btn btn-primary" href="/">Search Again!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>